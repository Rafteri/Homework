// Алгоритм для проверки простое число или нет  "Простое ли число?"
{var
  x, i: integer;
  s: boolean;}

if ((x mod 2) = 0) and (x <> 2) then s := false   // Отсеиваем все чётные числа кроме 2, т.к. 2 - простое число
   else 
    begin
      s:=true;  // Присваиваем им истинное значение
      for i := 2 to trunc(Sqrt(x)/2) do // Считаем все числа до корень из х, чтобы дважды не проверять. Делим на 2, чтобы отсеять четные числа, т.к. 
      
      begin
        if (x mod (i*2-1) = 0) then // Проверяем на наличие каких-дибо делителей кроме 1 и самого Х
        begin
          s := false; // Если делитель найден то присваиваем ложное значение, х - составное
          break; // Прекращаем цикл
        end
        
      end;
      
    end;
