// Программа поиска НОД, по алгоритму Евклида
program GCM;

uses
  crt;

var
  a, b, c: integer;

begin
  read(a, b);                  // Считываем 2 числа
  while b <> 0 do              // До тех пор пока b не равно нулю, выполняется цикл
  begin
    c := a mod b;              // Проверяем делится ли без остатка
    a := b;                    // Присваиваем а значение делителя, если b c=0, то a и есть искомый НОД
    b := c;                    // Присваиваем b значение остатка, если с=0, то цикл завершается
  end;
  writeln('НОД = ', a);        // Вывод
  readln();
end.
